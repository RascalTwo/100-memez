<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>Display Name</strong>: <%= profileUser.displayName %></p>
              <p><img src="<%= profileUser.avatarURL %>" /></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(var i=0; i<profileUser.posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= profileUser.posts[i]._id%>">
              <img class="img-fluid" src="<%= profileUser.posts[i].url%>">
            </a>

            <form
              class="col-1"
              action="/post/likePost/<%= profileUser.posts[i].id %>?_method=PUT"
              method="POST"
            >
              <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>
            <h3 class="col-6">Likes: <%= profileUser.posts[i].likes %></h3>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>